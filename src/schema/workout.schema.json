{
    "title": "Workout",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "date": {
            "type": "string",
            "format": "date-time"
        },
        "repeat": {
            "type": "string",
            "enum": ["never", "daily", "weekly"]
        },
        "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
        },
        "assignments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "exercise_id": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "rep_count": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "weight_scheme": {
                        "type": "string",
                        "enum": ["constant", "increasing"]
                    }
                },
                "required": ["exercise_id", "rep_count", "weight_scheme"]
            }
        }
    },
    "required": [ "name", "date", "repeat", "tags", "assignments" ]
  }